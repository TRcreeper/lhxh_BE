<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lhxh.demo.mapper.UserMapper">
    <!-- 动态sql -->
    <select id="list" resultType="com.lhxh.demo.pojo.User">
        select * from user
        <where>
                <if test="nickname!=null">
                        nickname=#{nickname}
                </if>
        </where>
     </select>   
</mapper>